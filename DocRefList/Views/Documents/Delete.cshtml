@model DocumentInfo                                      

@{
    ViewData["Title"] = "Удаление";
}

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Документ @($"№{Model.Number} от {Model.Date:dd.MM.yyyy}")</h4>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> | 
        <a asp-action="List">Вернуться к списку</a>
    </form>
 </div>
